<h1>Browse gifts</h1>
<br>

<div class="container-inner">
  <% @gifts.each do | gift| %>
    <div class="gift">
      <a href="/gifts/<%= gift.id %>">
        <strong><%= gift.title %></strong>
        <em><%= gift.description %></em><br>
      </a>
      <div> user name <%= gift.user_id %> |  <%= link_to time_ago_in_words(gift.created_at) + " ago" , gift %>
      <a class="btn btn-inf pull-right" href="#" role="button">Enquire Â»</a>
      </div>   

      <% if gift.user == current_user %>
        <span class="admin">
          <%= link_to "Edit", edit_gift_path(gift) %> | 
        </span>
      <% end %>
      <hr>   
    </div>    
  <% end %>
  <hr>

  <div class="searchPane">
    <p>Filter: <input data-bind="value: filter, valueUpdate: 'afterkeydown'" /></p>
  </div>

