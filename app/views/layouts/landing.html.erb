<!DOCTYPE html>
<html lang="en-US" class="no-js">
  <head>

  <!-- ==============================================
    Title and Meta Tags
    =============================================== -->
    <meta charset="utf-8">
    <title>GIFTEconomy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- Optional theme -->
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css"> -->
    <%= javascript_include_tag 'application' %>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    
    <%= stylesheet_link_tag    'application', media: 'all' %>
    
    <%= csrf_meta_tags %>

  </head>

<body>
  <nav class="navbar-wrapper navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if current_user %>
            <p class="navbar-text navbar-right">Welcome <%= link_to current_user.first_name, edit_user_registration_path %></p>
            <!-- <p class="navbar-text navbar-right">Welcome <a href="#" class="navbar-link"><%= current_user.first_name %></a></p> -->
            <li>
              <%= link_to "logout", destroy_user_session_path, method: :delete %>  
            </li>
          <% else %> 
            <li><%= link_to "About", "#about" %></li> 
            <li><%= link_to "login", new_user_session_path %></li>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <% if notice %>
      <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= notice %>
      </div>
      
      <!-- devise configurations  -->
    <% end %>
    <% if alert %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>   
  </div>

  <div id="about">
    <h2>About Us</h2>
  </div>
</body>
</html>