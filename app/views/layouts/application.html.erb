<!DOCTYPE html>
<html>
<head>
  <title>GIFTe</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar-wrapper navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <a class="navbar-brand"</a>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if current_user %>
            <p class="navbar-text navbar-right">Welcome <%= link_to current_user.first_name, edit_user_registration_path %></p>
            <!-- <p class="navbar-text navbar-right">Welcome <a href="#" class="navbar-link"><%= current_user.first_name %></a></p> -->
            <li>
              <%= link_to "logout", destroy_user_session_path, method: :delete %>  
            </li>
          <% else %> 
            <li><%= link_to "login", new_user_session_path %></li>
            <!-- <li><%= link_to "register", new_user_registration_path %></li> -->
          <% end %>
        </li>
      </ul>
    </div>
  </nav>  
<div class="container">
  <div class="jumbotron">
<%= yield %>
  </div>
</div>

</body>
</html>
